{% extends "./../main.html.twig" %}
{% block main %}
<div class="container">
<div class="row">

  <form class="col-md-6 mx-auto mt-5 GI-user-form" method="post" action="{% if action == "/updateUser" %}{{action}}/{{user._id}}{% else %}{{action}}{% endif %}">
        <div>
            <label for="name">Nom</label>
            <input type="text" class="form-control GI-input-name" id="name" name="name"  placeholder="Entrer un nom" value="{{user.name}}" >
         </div>
        <div>
            <label for="firstname">Prénom</label>
            <input type="text" class="form-control GI-input-firstname" id="firstname" name="firstname"  placeholder="Entrer un prénom" value="{{user.firstname}}" >
        </div>
        <div >
            <label for="mail">E-mail</label>
            <input type="mail" class="form-control GI-input-mail" id="mail" name="mail" placeholder="Entrer un E-mail" value="{{user.mail}}" >
        </div>
        
        <button type="submit" class="btn btn-primary GI-submit">Submit</button>
    </form>
</div>
</div>
{% endblock %}

